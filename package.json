{
  "name": "example-nestjs-app",
  "version": "1.0.0",
  "description": "The Nest.js app example.",
  "license": "ISC",
  "author": "Gleb Mikhalkov",
  "type": "commonjs",
  "main": "src/index.ts",
  "scripts": {
    "up": "docker-compose up -d",
    "down": "docker-compose down",
    "start": "node -r 'ts-node/register' ./src/index.ts",
    "watch": "node -r 'ts-node/register' --watch ./src/index.ts",
    "check": "run-s check:*",
    "check:types": "tsc --noEmit",
    "check:lint": "biome lint",
    "check:dry-run": "run-s \"start --dry-run\"",
    "test": "node -r 'ts-node/register' -r './src/tests/setup.ts' --test ./src/tests/**/*.test.ts",
    "test-with-coverage": "run-s test-with-coverage:*",
    "test-with-coverage:run": "nyc --reporter=lcov run-s test",
    "test-with-coverage:clean": "del ./.nyc_output ./coverage",
    "show-coverage": "run-s show-coverage:*",
    "show-coverage:clean": "del ./.nyc_output ./coverage",
    "show-coverage:run": "nyc --reporter=html run-s test",
    "show-coverage:open": "open-cli ./coverage/index.html",
    "print-coverage": "run-s print-coverage:*",
    "print-coverage:clean": "del ./nyc_output ./coverage",
    "print-coverage:run": "nyc --reporter=text run-s test",
    "preinstall": "run-s preinstall:*",
    "preinstall:create-env-local": "nodetouch ./.env.local",
    "create-migration": "typeorm-ts-node-commonjs migration:generate -d ./src/typeorm.data-source.ts ./src/migrations/${npm_config_name}",
    "create-blank-migration": "typeorm-ts-node-commonjs migration:create ./src/migrations/${npm_config_name} -- -d ./src/typeorm.data-source.ts",
    "run-migrations": "typeorm-ts-node-commonjs migration:run -d ./src/typeorm.data-source.ts",
    "revert-last-migration": "typeorm-ts-node-commonjs migration:revert -d ./src/typeorm.data-source.ts",
    "start-cluster": "pm2-runtime start ecosystem.config.js",
    "check-cluster": "docker-compose -f ./docker-compose.check-dockerfile.yaml up --build"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@types/shelljs": "^0.8.17",
    "del-cli": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^17.1.0",
    "open-cli": "^8.0.0",
    "pm2": "^6.0.13",
    "shelljs": "^0.10.0",
    "touch": "^3.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-fastify": "^11.1.7",
    "@nestjs/platform-socket.io": "^11.1.7",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/testing": "^11.1.6",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/websockets": "^11.1.7",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.7.2",
    "@types/supertest": "^6.0.3",
    "axios": "^1.12.2",
    "better-sqlite3": "^12.4.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.1",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "socket.io": "^4.8.1",
    "supertest": "^7.1.4",
    "ts-essentials": "^10.1.1",
    "typeorm": "^0.3.27"
  }
}
