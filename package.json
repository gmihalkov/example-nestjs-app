{
  "name": "example-nestjs-app",
  "version": "1.0.0",
  "description": "The Nest.js app example.",
  "license": "ISC",
  "author": "Gleb Mikhalkov",
  "type": "commonjs",
  "main": "src/index.ts",
  "scripts": {
    "start": "node --require 'ts-node/register' ./src/index.ts",
    "watch": "node --require 'ts-node/register' --watch ./src/index.ts",
    "check:types": "tsc --noEmit",
    "check:lint": "biome lint",
    "check:dry-run": "node --require 'ts-node/register' ./src/index.ts --dry-run",
    "check": "run-s check:*",
    "test": "node --require 'ts-node/register' --require './src/tests/setup.ts' --test ./src/tests/**/*.test.ts",
    "test-with-coverage": "nyc --clean --reporter=lcov run-s test",
    "open-coverage:clean": "del ./nyc_output ./coverage",
    "open-coverage:collect": "nyc --reporter=html run-s test",
    "open-coverage:open": "open-cli ./coverage/index.html",
    "open-coverage": "run-s open-coverage:*",
    "print-coverage:clean": "del ./nyc_output ./coverage",
    "print-coverage:collect": "nyc --reporter=text run-s test",
    "print-coverage": "run-s print-coverage:*"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "del-cli": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^17.1.0",
    "open-cli": "^8.0.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "@types/node": "^24.7.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^17.2.3",
    "reflect-metadata": "^0.2.2"
  }
}
